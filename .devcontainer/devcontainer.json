{
    "image": "mcr.microsoft.com/devcontainers/universal:latest",

    "features": {
        "ghcr.io/devcontainers/features/desktop-lite:1": {
            "version": "latest",
            "desktop": "xfce"
        }
    },

    "forwardPorts": [6080],

    "updateContentCommand": "sudo apt-get update && sudo apt-get install -y libglfw3-dev libopengl-dev",

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools"
            ]
        }
    }

}